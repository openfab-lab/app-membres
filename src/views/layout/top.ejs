<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <title>OpenFab Membres</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="/css/custom.css">

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


    <style type="text/css">
        /* Sticky footer styles
        -------------------------------------------------- */
        html {
          position: relative;
          min-height: 100%;
        }
        body {
          margin-bottom: 185px; /* Margin bottom by footer height */
        }

        footer {
          bottom: 0;
          width: 100%;
          position: absolute;
          height: 185px; /* Set the fixed height of the footer here */
          background-color: #f5f5f5;
        }

        .dropdown-item:active {
          background-color: #f5f5f5;
        }

        .card-bottom {
          margin-bottom: 15px;
        }
    </style>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand mb-0 h1" href="/" target="_self">OpenFab</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item <% if(page === 'membres') {%>active<% } %>">
                    <a class="nav-link" href="/membres" target="_self">Membres</a>
                </li>
            </ul>
            <% if (user) { %>
            <% if (user.permissionsLevel === 3) { %>
            <ul class="navbar-nav my-2 my-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin&nbsp;</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/admin/users">Gestion utilisateurs</a>
                    </div>
                </li>
            </ul>
            <% } %>
            <ul class="navbar-nav my-2 my-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="https://www.gravatar.com/avatar/<%= user.hashedEmail %>" height="21" width="21" class="rounded-circle">&nbsp;&nbsp;<%= user.firstName %>&nbsp;<b class="caret"></b></a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/perso/profil">Editer mon profil</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/logout" target="_self">D&eacute;connexion</a>
                    </div>
                </li>
            </ul>
            <% } else { %>
            <a href="/connexion" target="_self"><button class="btn btn-outline-light" type="button">Connexion / Inscription</button></a>
            <% } %>
        </div>
    </nav>
