    <h1 class="display-3">Inscription</h1>
    <h2>Etape 1/4</h2>
    
    <% if (errorMessage) { %>
        <div class="alert alert-danger" role="alert">
          <%= errorMessage %>
        </div>
    <% } %>
    <h3>Le check-in majeur*</h3> 
    <form action="/inscription/etape2?id=<%= id %>" method="post">
        <div class="col-sm-12">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="majority" id="over_than_18" value="over_than_18" checked>
              <label class="form-check-label" for="over_than_18">
                I was doing the Vulcan salute before it was cool.
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="majority" id="under_than_18" value="under_than_18">
